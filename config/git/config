[core]
	pager = delta
[interactive]
	diffFilter = delta --color-only
[diff]
	colorMoved = default
[delta]
	line-numbers = true
[alias]
	aa = add -A
	br = branch
	ci = commit
	co = checkout
	lg = log --oneline
	st = status
[branch]
	sort = -committerdate
[column]
	ui = auto
[filter "lfs"]
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
	required = true
	smudge = git-lfs smudge -- %f
[push]
	autoSetupRemote = true
[includeIf "gitdir:~/personal/"]
	path = ~/personal/.gitconfig
[includeIf "gitdir:~/work/"]
	path = ~/work/.gitconfig
